<div class="modal modal-container" id="divModal" tabindex="-1" role="dialog">
        <div class="modal-customizado center">
            <div id="divDetetiveModalTitulo">
                <label class="centralizar txtSalaMensagemTitulo">Aviso!</label>
            </div>
                <button type="button" class="fecha" data-dismiss="modal">X</button>
                <div class="modal-dialog" role="document">

                    <div class="modal-body">
                        <label id="mensagem" class="txtSalaMensagem centralizar">Tente novamente</label>
                    </div>
                </div>
        </div>
    </div>


<section id="secSuperior">
    <div class="centralizar" id="divLogo">
        <img src="~/Content/Imagens/Shared/imgLogo.svg" id="divLogo" />
    </div>
</section>

<section class="centralizar" id="secAcoes">
    <div id="divBotoes">
        <div>
            @*<button class="centralizar" id="divBtnCriarSala" onclick="location.href='..'">Criar Sala</button>*@
            <button class="centralizar" id="divBtnCriarSala" onclick="ManterSala.CriarSala()">Criar Sala</button>
        </div>
        <div>
            <button id="divBtnIngressar" onclick="ManterSala.IngressarSala()">Ingressar</button>
        </div>
        <div>
            <button id="divBtnVoltar" onclick="location.href='/Home/Index'">
                Voltar
            </button>
        </div>

    </div>

    <div classe="centralizar" id="divInputs">
        <div>
            <label for="txtIdSala" id="lblIdSala">Informe o ID da Sala:</label>
        </div>
        <div>
            <input type="text" id="txtIdSala" placeholder="Digite o #idSala aqui">
        </div>

        <div>
            <label for="txtNick" id="lblNick">Informe o seu Nick:</label>
        </div>
        <div>
            <input type="text" id="txtNick" placeholder="Digite o seu Nick aqui">
        </div>

        <div>
            @* Esse botão deve chamar o método Ingressar na controller Sala para que seja criado o jogador e adiciona-lo na sala. IMPORTANTE: o id da sala deve ser passado sem o '#'*@
            <button id="divBtnVamosAoCaso" onclick="ManterSala.divBtnVamosAoCaso_OnClick()">Escolher Personagem</button>
        </div>
    </div>
</section>